div.screenshots {
    padding-bottom: 10px;
    margin-left: 30px;
    margin-right: 30px;
}

div.screenshots img {
    width: 120px;
    border: thin solid #355F7C;
    margin-left: 10px;
    margin-top: 10px;
}

.downloaddescr {
    font-size: x-small;
}

.linkdescr {
    line-height : 130%;
}

a.external {
    background: url("external.png") center right no-repeat;
    padding: 0 13px 0 0;
}

.aawarn {
  color: red;  
}

.wikidownloadlinks {
    width: 100%;    
}

.wikidownloadlinks tr td {
    vertical-align: top;    
    padding-bottom: 3px;
    border-collapse: collapse;
}

.hidden {
    visibility:hidden;
}

.altrow {
background-color: #eeeeee;
}

/* emulate center */
.center {
	width: 100%;
	text-align: center;
}
*.center * {
	margin-left: auto;
	margin-right: auto;
}

.newaar {
    font-weight: bold;
}